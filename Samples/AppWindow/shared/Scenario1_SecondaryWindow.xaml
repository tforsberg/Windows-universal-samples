<Page
    x:Class="SDKTemplate.Scenario1_SecondaryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Text="Description:" Style="{StaticResource SampleHeaderTextStyle}"/>
            <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" TextWrapping="Wrap">
                Creates and shows a secondary window as an AppWindow. This secondary window is on the same UI thread as the main view.
            </TextBlock>
            <Button x:Name="showWindowBtn" Content="Create and show secondary window" Margin="0,10,0,0" Click="Button_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>
